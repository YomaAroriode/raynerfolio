---
const projects = [
  {
    title: "Crypto Portfolio Tracker",
    subtitle: "Real-time dashboard for managing digital assets",
    description:
      "Built with React, Tailwind CSS, and Coingecko API. Allows users to track crypto prices, view portfolio performance, and analyze trends with beautiful charts. Deployed on Vercel for lightning-fast performance.",
    image: "/assets/projects.jpg",
    tools: ["React", "Tailwind CSS", "Coingecko API", "Chart.js"],
    github: "https://github.com/yourusername/crypto-portfolio",
    live: "https://crypto-portfolio.vercel.app",
  },
  {
    title: "E-Commerce Platform",
    subtitle: "Full-stack web store with secure payments",
    description:
      "An e-commerce app built with Node.js, Express, and PostgreSQL. Features include product listings, shopping cart, Stripe integration for payments, and an admin dashboard for managing inventory.",
    image: "/assets/projects.jpg",
    tools: ["Node.js", "Express", "PostgreSQL", "Stripe"],
    github: "https://github.com/yourusername/ecommerce-platform",
    live: "https://myecommerce.store",
  },
  {
    title: "Real-time Chat App",
    subtitle: "Socket.io powered messaging with authentication",
    description:
      "A modern chat application using React and Socket.io for instant messaging, with user authentication via Firebase Auth and real-time presence indicators. Styled with DaisyUI.",
    image: "/assets/projects.jpg",
    tools: ["React", "Socket.io", "Firebase", "DaisyUI"],
    github: "https://github.com/yourusername/chat-app",
    live: "https://mychatapp.netlify.app",
  },
];
---

<section class="space-y-24 mx-auto mt-20 md:mt-40 px-4 max-w-5xl" id="projects">
  <h1 class="mb-2 font-bold text-3xl md:text-4xl">Featured Projects</h1>
  <div class="bg-primary mb-6 rounded w-20 h-1"></div>

  {
    projects.map((project, index) => {
      return (
        <div
          class={`items-center gap-20 md:gap-32 grid md:grid-cols-2 ${
            index % 2 !== 0 ? "md:[&>*:first-child]:order-2" : ""
          }`}
          data-aos={index % 2 === 0 ? "fade-right" : "fade-left"}
          data-aos-delay={`${100 * index}`}
        >
          <div>
            <h3 class="mb-4 font-bold text-2xl md:text-3xl">{project.title}</h3>
            <p class="mb-4 text-gray-500 leading-relaxed">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-2">
              {project.tools.map((tool) => (
                <span class="border-primary badge-outline badge">{tool}</span>
              ))}
            </div>
          </div>

          <div class="flex justify-center">
            <a href={project.live} target="_blank">
              <img
                src={project.image}
                alt={project.title}
                loading="lazy"
                class="shadow-lg rounded-2xl w-full max-w-md object-cover hover:scale-105 transition duration-300 ease-in-out"
              />
            </a>
          </div>
        </div>
      );
    })
  }

  <!-- See More -->
  <div class="mt-12 text-center">
    <a
      href="https://github.com/YomaAroriode"
      target="_blank"
      class="inline-block px-6 py-2 rounded-field btn-outline font-semibold hover:scale-105 transition-transform duration-200 ease-in-out btn btn-primary"
    >
      See More on GitHub
    </a>
  </div>
</section>
